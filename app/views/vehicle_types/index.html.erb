<h1>Listing vehicle_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for vehicle_type in @vehicle_types %>
  <tr>
    <td><%=h vehicle_type.name %></td>
    <td><%=h vehicle_type.description %></td>
    <td><%= link_to 'Show', vehicle_type %></td>
    <td><%= link_to 'Edit', edit_vehicle_type_path(vehicle_type) %></td>
    <td><%= link_to 'Destroy', vehicle_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

